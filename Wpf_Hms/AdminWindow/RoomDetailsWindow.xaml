<Window x:Class="Wpf_Hms.AdminWindow.RoomDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Hms"
        mc:Ignorable="d"
        Title="Room Details" 
        Height="755" Width="1150" 
        Background="AliceBlue" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" >
    <Canvas>
        <Label x:Name="lbTitle" Content="Room's details" Height="80" Width="814" FontWeight="Heavy" FontSize="40" FontStyle="Italic" Foreground="Black" Canvas.Left="10" Canvas.Top="10" />

        <Rectangle Height="610" Stroke="Black" Width="875" Fill="AntiqueWhite" RadiusX="10" RadiusY="10" Canvas.Left="138" Canvas.Top="95" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Label Content="Room's ID" Height="45" Width="128" Foreground="#ff4500" Canvas.Left="168" Canvas.Top="119" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox x:Name="txtRoomId" Height="45" Width="227" TextWrapping="Wrap" TabIndex="0" IsEnabled="False" Canvas.Left="296" Canvas.Top="119" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Label Content="Room's Number" Height="45" Width="128" Foreground="#ff4500" Canvas.Left="617" Canvas.Top="119" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox x:Name="txtRoomNumber" Height="45" Width="227" TextWrapping="Wrap" TabIndex="1" IsEnabled="False" Canvas.Left="745" Canvas.Top="119" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Label Content="Price($) / day" Height="45" Width="128" Canvas.Left="168" Canvas.Top="195" Foreground="#ff4500" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox x:Name="txtPrice" Height="45" Width="227" Canvas.Left="296" Canvas.Top="195" TextWrapping="Wrap" TabIndex="2" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Label Content="Max capacity" Height="45" Width="128" Canvas.Left="617" Canvas.Top="195" Foreground="#ff4500" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox x:Name="txtCapacity" Height="45" Width="227" Canvas.Left="745" Canvas.Top="195" TextWrapping="Wrap" TabIndex="2" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Label Content="Status" Height="45" Width="128" Foreground="#ff4500" Canvas.Left="168" Canvas.Top="272" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbxStatus" Height="45" Width="227" Background="#ff4500" TabIndex="6" IsEnabled="False" FontWeight="Bold" FontSize="18" Canvas.Left="296" Canvas.Top="272" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label Content="Room's type" Height="45" Width="128" Foreground="#ff4500" Canvas.Left="617" Canvas.Top="273" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbxRoomType" Height="45" Width="227" Background="#ff4500" TabIndex="6" IsEnabled="False" FontWeight="Bold" FontSize="18" Canvas.Left="745" Canvas.Top="273" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label Content="Room's Description" Height="44" Width="128" Canvas.Left="158" Canvas.Top="358" Foreground="#ff4500" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="txtRoomDescription" Height="105" Width="638" Canvas.Left="362" Canvas.Top="331" TextWrapping="Wrap" TabIndex="3" IsEnabled="False" AcceptsReturn="True" />

        <Label Content="Room's type id" Height="46" Width="128" Canvas.Left="168" Canvas.Top="459" Foreground="#ff4500" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox x:Name="txtRoomTypeId" Height="46" Width="227" Canvas.Left="296" Canvas.Top="459" TextWrapping="Wrap" TabIndex="9" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Label Content="Type's name" Height="46" Width="128" Canvas.Left="617" Canvas.Top="459" Foreground="#ff4500" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBox x:Name="txtRoomTypeName" Height="46" Width="227" Canvas.Left="745" Canvas.Top="459" TextWrapping="Wrap" TabIndex="9" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" />

        <Label Content="Type's description" Height="46" Width="128" Canvas.Left="168" Canvas.Top="535" Foreground="#ff4500" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="txtRoomTypeDescription" Height="46" Width="227" Canvas.Left="296" Canvas.Top="535" TextWrapping="Wrap" TabIndex="9" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" />
        
        <Label Content="Type's note" Height="46" Width="128" Canvas.Left="617" Canvas.Top="535" Foreground="#ff4500" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="txtRoomTypeNote" Height="46" Width="227" Canvas.Left="745" Canvas.Top="535" TextWrapping="Wrap" TabIndex="9" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center" />
        
        <Button x:Name="btnClose" Content="Close" Height="50" Width="165" TabIndex="13" Click="btnClose_Click" Canvas.Left="493" Canvas.Top="618" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Canvas>
</Window>
